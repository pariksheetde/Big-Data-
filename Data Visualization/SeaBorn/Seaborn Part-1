import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt
days = [1,2,3]
temp = [36.25,35.05,30]

df = pd.DataFrame({
    "days" : days,
    "temp" : temp
})

plt.xlabel("Days")
plt.ylabel("Temperature")
plt.title("Whether Forecasting")
plt.grid()
sns.lineplot(x = days, y = temp, data = df)
plt.show()

