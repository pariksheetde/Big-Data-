import pandas as pd
import seaborn as sns
sns.set()
import matplotlib.pyplot as plt

bill = pd.read_csv("D:\Code\DataSet\PythonDataSet\Bills.csv")
# create a lineplot in seaborn
sns.lineplot(x="total_bill", y="tip", data=bill)

plt.xlabel("Total Bill")
plt.ylabel("Tips")
plt.title("Bill")
plt.show()

